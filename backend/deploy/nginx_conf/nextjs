# 1. 处理HTTP请求（80端口）并强制跳转HTTPS+非www
server {
    listen 80;
    server_name pixelmyth.shop www.pixelmyth.shop;
    return 301 https://pixelmyth.shop$request_uri;  # 统一跳转到HTTPS主域名
}

# 2. 处理HTTPS请求（443端口）并强制跳转非www
server {
    listen 443 ssl;
    server_name www.pixelmyth.shop;  # 仅匹配带www的HTTPS请求
    ssl_certificate /etc/letsencrypt/live/pixelmyth.shop/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/pixelmyth.shop/privkey.pem;
    return 301 https://pixelmyth.shop$request_uri;  # 跳转到非www主域名
}

# 3. 主域名HTTPS服务配置
server {
    listen 443 ssl;
    server_name pixelmyth.shop;  # 主域名

    location / {
        proxy_pass http://localhost:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    ssl_certificate /etc/letsencrypt/live/pixelmyth.shop/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/pixelmyth.shop/privkey.pem;
    
    # 其他SSL优化配置（如HSTS）
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    
    # 网站内容配置
    #root /var/www/html;
    #index index.html;
}

# 4. 后端HTTPS配置
server {
    listen 443 ssl;
    server_name api.pixelmyth.shop;

    ssl_certificate /etc/letsencrypt/live/api.pixelmyth.shop/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.pixelmyth.shop/privkey.pem;

    location / {
        client_max_body_size 50M;
        proxy_pass http://127.0.0.1:8000;  # Flask 服务
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
